# ==============================================
# Itqan CMS - Development Environment Variables
# ==============================================
# Copy this file to .env.dev and adjust values as needed

# ==============================================
# Database Configuration (PostgreSQL)
# ==============================================
POSTGRES_DB=itqan_cms
POSTGRES_USER=cms_user
POSTGRES_PASSWORD=dev_password_123
DATABASE_URL=postgres://cms_user:dev_password_123@postgres:5432/itqan_cms

# ==============================================
# Strapi Configuration
# ==============================================
NODE_ENV=development
APP_KEYS=your-app-key-1,your-app-key-2,your-app-key-3,your-app-key-4
API_TOKEN_SALT=your-api-token-salt
ADMIN_JWT_SECRET=your-admin-jwt-secret
TRANSFER_TOKEN_SALT=your-transfer-token-salt
JWT_SECRET=your-jwt-secret

# Strapi Server
HOST=0.0.0.0
PORT=1337

# ==============================================
# Object Storage (MinIO - S3 Compatible)
# ==============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# Upload Provider Configuration
UPLOAD_PROVIDER=aws-s3
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
AWS_BUCKET=itqan-uploads
AWS_ENDPOINT=http://minio:9000
AWS_S3_FORCE_PATH_STYLE=true

# ==============================================
# Search Engine (Meilisearch)
# ==============================================
MEILI_MASTER_KEY=dev-master-key-123
MEILI_HOST=http://meilisearch:7700

# ==============================================
# Auth0 Configuration
# ==============================================
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://api.itqan.com
AUTH0_SCOPE=openid profile email

# Machine-to-Machine for Strapi integration
AUTH0_M2M_CLIENT_ID=your-m2m-client-id
AUTH0_M2M_CLIENT_SECRET=your-m2m-client-secret

# ==============================================
# Next.js Configuration
# ==============================================
NEXT_PUBLIC_STRAPI_URL=http://localhost:1337
NEXT_PUBLIC_STRAPI_API_URL=http://localhost:1337/api
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# ==============================================
# Internationalization
# ==============================================
LOCALES=en,ar
DEFAULT_LOCALE=en

# ==============================================
# Email Configuration (for notifications)
# ==============================================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@itqan.com
EMAIL_FROM_NAME=Itqan CMS

# ==============================================
# Cache & Queue (Redis) - Commented out for MVP
# ==============================================
# ENABLE_CACHE=false
# ENABLE_QUEUE=false
# REDIS_URL=redis://redis:6379

# ==============================================
# Observability (Optional for dev)
# ==============================================
# LOG_LEVEL=debug
# ENABLE_METRICS=false

# ==============================================
# Security & Rate Limiting
# ==============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:1337
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# ==============================================
# Feature Flags (for gradual rollout)
# ==============================================
FEATURE_MEILISEARCH=true
FEATURE_WORKFLOWS=true
FEATURE_I18N=true
