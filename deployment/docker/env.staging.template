# Staging Environment Configuration Template
# Copy this file to .env in your staging deployment directory

# Django Settings
DJANGO_SETTINGS_MODULE=config.settings.staging
SECRET_KEY=your-super-secret-staging-key-here-change-this
DEBUG=False

# Site Configuration
SITE_DOMAIN=staging.api.cms.itqan.dev

# Database Configuration (DigitalOcean Managed Database)
DB_NAME=cms-staging-db
DB_USER=your-staging-db-user
DB_PASSWORD=your-staging-db-password
DB_HOST=your-staging-db-host
DB_PORT=25060

# Email Configuration (Staging)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=staging-noreply@itqan.dev
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=staging-noreply@itqan.dev

# OAuth Settings (Use staging/test apps)
# Google OAuth (Staging App)
GOOGLE_OAUTH2_CLIENT_ID_STAGING=your-staging-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET_STAGING=your-staging-google-client-secret

# GitHub OAuth (Staging App)
GITHUB_CLIENT_ID_STAGING=your-staging-github-client-id
GITHUB_CLIENT_SECRET_STAGING=your-staging-github-client-secret

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-for-staging
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=86400

# Error Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-for-staging

# File Storage (Local for staging)
MEDIA_URL=/media/
STATIC_URL=/static/

# API Configuration
API_VERSION=v1
API_TITLE=Itqan CMS API (Staging)
API_DESCRIPTION=Staging environment for Itqan CMS API

# CORS Settings
CORS_ALLOWED_ORIGINS=https://staging.cms.itqan.dev,http://localhost:3000

# Rate Limiting (More lenient for staging)
THROTTLE_ANON_RATE=100/hour
THROTTLE_USER_RATE=1000/hour

# Feature Flags
ENABLE_API_DOCS=True
ENABLE_SWAGGER_UI=True

# Logging
LOG_LEVEL=INFO
