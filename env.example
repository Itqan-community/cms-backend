# Itqan CMS - Environment Variables Template
# Copy this file to .env and update the values for your environment

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DB_NAME=itqan_cms
DB_USER=itqan_user
DB_PASSWORD=itqan_password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/1

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# MeiliSearch Configuration
MEILI_HTTP_ADDR=http://localhost:7700
MEILI_MASTER_KEY=itqan-meili-master-key-dev

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://api.itqan.com

# Storage Configuration (Development - MinIO)
OSS_ENDPOINT_URL=http://localhost:9000
OSS_ACCESS_KEY_ID=itqan-minio-access
OSS_SECRET_ACCESS_KEY=itqan-minio-secret-key
OSS_BUCKET_NAME=itqan-cms-dev
OSS_REGION=us-east-1

# Email Configuration (Development)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@itqan.com

# Frontend Configuration
ANGULAR_API_URL=http://localhost:8000/api/v1

# Security (Production Only)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Monitoring (Production Only)
# SENTRY_DSN=your-sentry-dsn-here
