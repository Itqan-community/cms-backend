				{
					"name": "1.6 Refresh Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('access_token', response.access);",
									"    if (response.refresh) {",
									"        pm.environment.set('refresh_token', response.refresh);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
