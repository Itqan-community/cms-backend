{
  "task_id": 4,
  "task_name": "License System Implementation", 
  "description": "Implement comprehensive License model with terms and permissions",
  "priority": "High",
  "estimated_hours": 8,
  "status": "Not Started",
  "dependencies": [1],
  "detailed_requirements": {
    "objective": "Create complete license system supporting OpenAPI License schema specifications",
    "model_specifications": {
      "core_fields": [
        "code: string (unique, e.g. 'cc0', 'cc-by-4.0')",
        "name: string (full license name)",
        "short_name: string (abbreviated name)",
        "url: string (official license URL)",
        "icon_url: string (license icon URL)",
        "summary: text (brief description)",
        "full_text: text (complete license text)",
        "legal_code_url: string (legal code URL)",
        "is_default: boolean (V1: CC0 is default)"
      ],
      "structured_data": [
        "license_terms: JSONField (array of terms with title, description, order)",
        "permissions: JSONField (array with key, label, description)",
        "conditions: JSONField (array of conditions)",
        "limitations: JSONField (array with key, label, description)"
      ]
    },
    "openapi_alignment": {
      "license_schema": "Must match License schema in openapi.yaml exactly",
      "license_summary_schema": "Must support LicenseSummary schema",
      "api_fields": [
        "code", "name", "short_name", "url", "icon_url", 
        "summary", "full_text", "legal_code_url",
        "license_terms", "permissions", "conditions", "limitations",
        "usage_count", "is_default"
      ]
    }
  },
  "v1_license_specifications": {
    "default_license": "CC0 - Public Domain",
    "supported_licenses": [
      "CC0 - Public Domain",
      "CC BY 4.0 - Attribution", 
      "CC BY-SA 4.0 - Attribution-ShareAlike",
      "MIT License",
      "Apache 2.0"
    ],
    "license_terms_structure": {
      "example": {
        "title": "البند الأول",
        "description": "يحق لك نسخ وتعديل وتوزيع العمل",
        "order": 1
      }
    },
    "permissions_structure": {
      "example": {
        "key": "commercial_use",
        "label": "Commercial use", 
        "description": "You may use the material for commercial purposes"
      }
    }
  },
  "data_seeding": {
    "initial_licenses": [
      {
        "code": "cc0",
        "name": "CC0 - Public Domain",
        "is_default": true,
        "url": "https://creativecommons.org/publicdomain/zero/1.0/"
      },
      {
        "code": "cc-by-4.0",
        "name": "Creative Commons Attribution 4.0",
        "url": "https://creativecommons.org/licenses/by/4.0/"
      }
    ]
  },
  "integration_points": {
    "resource_model": "Resource.default_license FK relationship",
    "asset_model": "Asset.license FK relationship", 
    "asset_access": "AssetAccess.effective_license for license snapshots",
    "api_endpoints": "/licenses and /licenses/{code} endpoints"
  },
  "acceptance_criteria": [
    "License model created with all OpenAPI schema fields",
    "JSON fields properly store structured license data",
    "Default licenses seeded in database",
    "License API endpoints return correct data format",
    "Usage count calculation works correctly",
    "License snapshots captured in AssetAccess"
  ]
}
