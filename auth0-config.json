{
  "tenant": {
    "friendly_name": "Itqan CMS",
    "picture_url": "https://itqan.com/logo.png",
    "support_email": "support@itqan.com",
    "support_url": "https://itqan.com/support",
    "flags": {
      "enable_client_connections": true,
      "enable_apis_section": true,
      "enable_pipeline2": true
    }
  },
  "clients": [
    {
      "name": "Itqan CMS Web App",
      "description": "Itqan Quranic Content Management System - Single Page Application",
      "app_type": "spa",
      "callbacks": [
        "http://localhost:3000/api/auth/callback",
        "https://itqan.com/api/auth/callback"
      ],
      "allowed_logout_urls": [
        "http://localhost:3000",
        "https://itqan.com"
      ],
      "web_origins": [
        "http://localhost:3000",
        "https://itqan.com"
      ],
      "allowed_origins": [
        "http://localhost:3000",
        "https://itqan.com"
      ],
      "grant_types": [
        "authorization_code",
        "refresh_token"
      ],
      "token_endpoint_auth_method": "none",
      "oidc_conformant": true,
      "jwt_configuration": {
        "alg": "RS256"
      }
    }
  ],
  "resourceServers": [
    {
      "name": "Itqan CMS API",
      "identifier": "https://api.itqan.com",
      "signing_alg": "RS256",
      "scopes": [
        {
          "value": "read:content",
          "description": "Read Quranic content"
        },
        {
          "value": "write:content", 
          "description": "Create and edit content"
        },
        {
          "value": "manage:users",
          "description": "Manage user accounts"
        },
        {
          "value": "admin:all",
          "description": "Full administrative access"
        }
      ],
      "allow_offline_access": true,
      "token_lifetime": 86400,
      "skip_consent_for_verifiable_first_party_clients": true
    }
  ],
  "connections": [
    {
      "name": "github-itqan",
      "strategy": "github",
      "options": {
        "scope": ["user:email"],
        "set_user_root_attributes": "on_each_login"
      },
      "enabled_clients": ["Itqan CMS Web App"]
    }
  ],
  "branding": {
    "colors": {
      "primary": "#669B80",
      "page_background": "#FFFFFF"
    },
    "logo_url": "https://itqan.com/logo.png"
  },
  "universalLogin": {
    "colors": {
      "primary": "#669B80",
      "page_background": "#FFFFFF"
    }
  },
  "pages": [
    {
      "name": "login",
      "enabled": true,
      "html": "<!DOCTYPE html><html><head><meta charset=\"utf-8\"><meta http-equiv=\"X-UA-Compatible\" content=\"IE=edge,chrome=1\"><title>Sign In | Itqan CMS</title><meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\" /></head><body><div id=\"login-container\"></div></body></html>"
    }
  ]
}
